extends ../layout2.jade

block content
  .row(style="padding-top:30px;")
    .col-12
      .card
        .card-body.p-b-0
          ul.nav.nav-tabs.customtab(role='tablist')
            li.nav-item
              a.nav-link.show.active(data-toggle='tab', href='#home2', role='tab', aria-selected='true')
                span.hidden-sm-up
                  i.ti-home
                span.hidden-xs-down Devices List
            li.nav-item
              a.nav-link.show(data-toggle='tab', href='#profile2', role='tab', aria-selected='false')
                span.hidden-sm-up
                  i.ti-user
                span.hidden-xs-down Upload Devices

          // Tab panes
          .tab-content
            #home2.tab-pane.show.active(role='tabpanel')
              .p-20
                h4.card-title Provider Devices
                h6.card-subtitle Devices details
                .table-responsive.m-t-40
                    table#example23.display.nowrap.table.table-hover.table-striped.table-bordered.dataTable(cellspacing='0', width='100%', role='grid', aria-describedby='example23_info', style='width: 100%;')
                      thead
                        tr(role='row')
                          th.sorting_asc(tabindex='0', aria-controls='example23', rowspan='1', colspan='1', aria-sort='ascending', aria-label='Name: activate to sort column descending', style='width: 162px;') Name
                          th.sorting(tabindex='0', aria-controls='example23', rowspan='1', colspan='1', aria-label='Position: activate to sort column ascending', style='width: 249px;') Position
                          th.sorting(tabindex='0', aria-controls='example23', rowspan='1', colspan='1', aria-label='Office: activate to sort column ascending', style='width: 119px;') Office
                          th.sorting(tabindex='0', aria-controls='example23', rowspan='1', colspan='1', aria-label='Age: activate to sort column ascending', style='width: 45px;') Age
                          th.sorting(tabindex='0', aria-controls='example23', rowspan='1', colspan='1', aria-label='Start date: activate to sort column ascending', style='width: 104px;') Start date
                          th.sorting(tabindex='0', aria-controls='example23', rowspan='1', colspan='1', aria-label='Salary: activate to sort column ascending', style='width: 78px;') Salary
                      tfoot
                        tr
                          th(rowspan='1', colspan='1') Name
                          th(rowspan='1', colspan='1') IMEI
                          th(rowspan='1', colspan='1') Model
                          th(rowspan='1', colspan='1') Admission Date
                          th(rowspan='1', colspan='1') Ubication
                      tbody
                        tr.odd(role='row')
                          td.sorting_1 Airi Satou
                          td Accountant
                          td Tokyo
                          td 33
                          td 2008/11/28
                        tr.even(role='row')
                          td.sorting_1 Angelica Ramos
                          td Chief Executive Officer (CEO)
                          td London
                          td 47
                          td 2009/10/09
                        tr.odd(role='row')
                          td.sorting_1 Ashton Cox
                          td Junior Technical Author
                          td San Francisco
                          td 66
                          td 2009/01/12

                        tr.even(role='row')
                          td.sorting_1 Cedric Kelly
                          td Senior Javascript Developer
                          td Edinburgh
                          td 22
                          td 2012/03/29
            #profile2.tab-pane.p-20.show(role='tabpanel')
              .vtabs.customvtab
                ul.nav.nav-tabs.tabs-vertical(role='tablist')
                  li.nav-item
                    a.nav-link.active(data-toggle='tab', href='#home3', role='tab')
                      span.hidden-sm-up
                        i.ti-home
                      span.hidden-xs-down One
                  li.nav-item
                    a.nav-link(data-toggle='tab', href='#profile3', role='tab')
                      span.hidden-sm-up
                        i.ti-user
                      span.hidden-xs-down From .csv
                // Tab panes
                .tab-content
                  #home3.tab-pane.active(role='tabpanel')
                    .p-20
                      form(action='#')
                        .form-body
                          h3.card-title Device Info
                          hr
                          .row.p-t-20
                            .col-md-4
                              .form-group
                                label.control-label Comercial Name
                                input#firstName.form-control
                                small.form-control-feedback  This is inline help
                            // /span
                            .col-md-4
                              .form-group
                                label.control-label IMEI
                                input#lastName.form-control(type='number')
                                //small.form-control-feedback(style="display:none")  This field has error.
                            .col-md-4
                              .form-group
                                label.control-label Model
                                input#lastName.form-control(type='text')
                            // /span
                            // /row
                          .row
                            .col-md-6
                              .form-group
                                label.control-label Ubication
                                input#firstName.form-control(type='text', placeholder='In Stock', style='background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;')
                                small.form-control-feedback  This is inline help
                              // /span
                            .col-md-6
                              .form-group
                                label.control-label Admission Date
                                input.form-control(type='date', placeholder='dd/mm/yyyy')
                        .row
                          .col-md-4
                            button.btn.btn-success(type='submit')
                              i.fa.fa-check
                              |  Save
                          .col-md-4
                            button.btn.btn-inverse(type='button') Cancel



                  #profile3.tab-pane.p-20(role='tabpanel')
                    .dropify-wrapper
                      .dropify-message
                        span.file-icon
                        p Drag and drop a file here or click
                        p.dropify-error Ooops, something wrong appended.
                      .dropify-loader
                      .dropify-errors-container
                        ul
                      input#input-file-max-fs.dropify(type='file', data-max-file-size='2M')
                      button.dropify-clear(type='button') Remove
                      .dropify-preview
                        span.dropify-render
                        .dropify-infos
                          .dropify-infos-inner
                            p.dropify-filename
                              span.file-icon
                              span.dropify-filename-inner
                            p.dropify-infos-message Drag and drop or click to replace






      script(src="./javascripts/angular.min.js")
      script(src="./javascripts/jquery-2.1.1.min.js")
      script(src="./javascripts/controllers/list_course.js")
