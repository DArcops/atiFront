doctype html
html(ng-app="app")
  head
    meta(charset='UTF-8')
    AT&T
    meta(name='author', content='Ravikumar Chauhan')
    title AT&T - Marketing
    // Meta and Opengraph tags
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:300')
    link(rel='stylesheet', href='css/stylesheets/new_login.css')
  body
    // Main content
    main(role='main')
      .mediahawkz-login
        .div-left
        .div-right
          .rkmd-form.login
            h2.form-title Sign Up
            form#login(ng-submit='submit()', ng-controller='SignUp')
              .form-field
                input#emailid.field-input(type='text', name='name', ng-model="name", placeholder="Name")
                i.material-icons.md-18 error_outline
              .form-field
                input#emailid.field-input(type='text', name='emailid', ng-model="email", placeholder="Email")
                i.material-icons.md-18 error_outline
              .form-field
                input#pass.field-input(type='password', name='pass' ,ng-model="pass",placeholder="Password")
                i.material-icons.md-18 error_outline
              .form-field
                input#pass.field-input(type='password', name='confirm_pass' ng-model="confirm_pass", placeholder="Confirm your password")
                i.material-icons.md-18 error_outline
              .form-row
                .msg
                  // <span class="error">We can't find that email address. Have you registered?.</span>

                button#submit.rkmd-btn.btn-lightBlue.ripple-effect.float-right Register

          .rkmd-form.reset(style='display: none;')
            h2.form-title Reset password
            form#reset(action='', method='POST', onsubmit='return false;')
              .form-row
                span.default You will receive a link to create a new password via email.
              .form-field
                label.field-label(for='emailid') Email ID
                input#emailid.field-input(type='text', name='emailid')
                i.material-icons.md-18 error_outline
              .form-row
                .msg
                  // <span class="error"></span>
              .form-row.clearfix
                button#reset.rkmd-btn.btn-lightBlue.ripple-effect.float-right RESET PASSWORD
              .form-row.clearfix
                a.link.float-right.toggle(href='#', data-tab='login', onclick='return false;') Sign Up
          .copyright
            p
              | Â© 2016

    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src="./javascripts/angular.min.js")
    script(src='javascripts/controllers/sign_up.js')
