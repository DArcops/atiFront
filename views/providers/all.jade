extends ../layout2.jade

block content

  .row(style="padding-top:20px")
    .col-lg-3.col-md-6
      .card
        .card-body(style="padding:1.25rem")
          .d-flex.flex-row
            .round.round-lg.align-self-center.round-info
              i.ti-wallet
            .m-l-10.align-self-center
              h3.m-b-0.font-light 3249
              h5.text-muted.m-b-0 Total Providers
    .col-lg-3.col-md-6
      .card
        .card-body(style="padding:1.25rem")
          .d-flex.flex-row
            .round.round-lg.align-self-center.round-warning
              i.mdi.mdi-cellphone-link
            .m-l-10.align-self-center
              h3.m-b-0.font-lgiht 2376
              h5.text-muted.m-b-0 Total Devices
    .col-lg-3.col-md-6
      .card
        .card-body(style="padding:1.25rem")
          .d-flex.flex-row
            .round.round-lg.align-self-center.round-primary
              i.mdi.mdi-cart-outline
            .m-l-10.align-self-center
              h3.m-b-0.font-lgiht $1795
              h5.text-muted.m-b-0 Offline Revenue
    .col-lg-3.col-md-6
      .card
        .card-body(style="padding:1.25rem")
          .d-flex.flex-row
            .round.round-lg.align-self-center.round-danger
              i.mdi.mdi-bullseye
            .m-l-10.align-self-center
              h3.m-b-0.font-lgiht $687
              h5.text-muted.m-b-0 Ad. Expense
    // Column


  .row(ng-controller='Providers')
    #exampleModal.modal.fade.show(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel1', aria-modal='true', style='display: block; padding-right: 15px;', ng-show="showModal")
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h4#exampleModalLabel1.modal-title Add Provider
            button.close(type='button', data-dismiss='modal', aria-label='Close' ng-click="hideModal()")
              span(aria-hidden='true') Ã—
          .modal-body
            form
              .form-group
                label.control-label(for='recipient-name') Name:
                input#recipient-name1.form-control(type='text', ng-model="name")
              .form-group
                label.control-label(for='recipient-name') Contact Name:
                input#recipient-name1.form-control(type='text', ng-model="contactName")
              .form-group
                label.control-label(for='message-name') Email:
                input#message-text1.form-control(ng-model="email")
              .form-group
                label.control-label(for='message-name') Phone:
                input#message-text1.form-control(type='tel', ng-model="phone")
          .modal-footer
            button.btn.btn-info(type='button', data-dismiss='modal', ng-click="hideModal()") Close
            button.btn.btn-success(type='button', ng-click="saveProvider()") Save
    .modal-backdrop.fade.show(ng-show="showModal")

    .col-lg-12
      .card
        .card-body(style="padding:1.25rem")
          .d-flex.no-block
            h4.card-title Providers
            button.btn.btn-info.btn-circle(type='button' style="margin-left:auto" ng-click="activeModal()")
              i.fa.fa-plus

          .table-responsive.m-t-20
            table.table.stylish-table
              thead
                tr
                  th(colspan='2') Name
                  th Email
                  th Phone
              tbody
                tr(ng-repeat='provider in providers')
                  td(style='width:50px;')
                    a(href="providers/{{provider.id}}/devices")
                      span.round {{provider.name[0]+provider.name[1]}}
                  td
                    a(href="providers/{{provider.id}}/devices")
                      h6 {{provider.name}}
                    small.text-muted {{provider.contact_name}}
                  td {{provider.email}}
                  td
                    {{provider.phone}}
                  td
                    button.btn.btn-secondary.btn-circle(type='button')
                      i.fa.fa-pencil

      // Column


      script(src="./javascripts/angular.min.js")
      script(src="./javascripts/controllers/providers.js")
      script(src="./javascripts/jquery-2.1.1.min.js")
